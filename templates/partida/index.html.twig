{% extends 'base.html.twig' %}

{% block title %}
    Partida {{ partida.id }}
{% endblock %}

{% block body %}
    <h1>Partida {{ partida.id }}</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Jugador 1: {{ jugador1.name }}</h2>
            </div>
            <div class="col-md-6">
                <h2>Jugador 2: {{ jugador2.name }}</h2>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <h2>Preguntas</h2>
                <ul class="list-group">
                    {% for pregunta in preguntas %}
                        <li class="list-group-item">
                            {{ pregunta.pregunta }}
                            <br>
                            **Respuesta correcta:** {{ pregunta.respuestaCorrecta }}
                            <br>
                            **Respuestas incorrectas:**
                            <ul>
                                {% for respuestaIncorrecta in pregunta.respuestasIncorrectas %}
                                    <li>{{ respuestaIncorrecta }}</li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}