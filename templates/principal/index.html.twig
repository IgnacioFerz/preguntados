{% extends 'btemplate.html.twig' %}

{% block title %}Hello PrincipalController!{% endblock %}

{% block body %}

    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Preguntados - Symfony</title>

        <style>

            .spinner {
                width: 50px;
                height: 50px;
                border: 10px solid #f3f3f3; /* Color de borde gris claro */
                border-radius: 50%;
                border-top: 10px solid #3498db; /* Color de la barra superior (azul) */
                animation: spin 1.2s linear infinite; /* Animación de giro */
                display: none; /* Initially hidden */
            }

            @keyframes spin {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
            }

            #buscarPartidaButton {
                background-color: #3498db; /* Blue color */
                color: white; /* White text for better contrast */
                border: 2px solid #007bff; /* Blue border */
                border-radius: 20px; /* Slightly rounded corners */
                text-align: center;
                width: 300px;
                height: 100px;
                margin-top: 15%;
                margin-left: 43%;
            }
            #cancelarColaButton
            {
                background-color: #3498db; /* Blue color */
                color: white; /* White text for better contrast */
                border: 2px solid #007bff; /* Blue border */
                border-radius: 20px; /* Slightly rounded corners */
                text-align: center;
                width: 300px;
                height: 100px;
                margin-top: 15%;
                margin-left: 43%;
            }

        </style>

    </head>
    <body>

    <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_principal') }}">Preguntados</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('app_ranking') }}">Ranking</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_perfil', {'nombre': nombre}) }}">{{ nombre }}</a>
                    </li>
                    <li class="nav-item">
                        <a id='logout' class="nav-link" href="http://127.1.5.20:8000/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="spinner" class="spinner"></div>

    <button id="buscarPartidaButton" class="nav-link" href="#">Buscar partida</button>
    <button id="cancelarColaButton" class="nav-link d-none" href="#">Cancelar cola</button>

    <div class="container-fluid">
        <div class="fixed-bottom pb-3 mb-4 ">
            <div class="alert alert-info text-center" role="alert">
                <p class="mb-0">Esta terminantemente prohibido hacer trampas. En caso de que algún jugador encuentre algún bug tiene que reportarlo al siguiente email: <a href="mailto:ignacio.com" class="alert-link">ignacio.com</a></p>
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3 ">
        <div class="container text-center">
            <span class="text-muted">IgnacioFerz@github &hearts;</span>
        </div>
    </footer>
    <script type="module" src="{{ asset('js/index.js') }}"></script>
    </body>

    </html>



{% endblock %}
