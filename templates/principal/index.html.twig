{% extends 'base.html.twig' %}

{% block title %}Hello PrincipalController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trivial App</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <h1>Trivial App</h1>
        <p>¡Pon a prueba tus conocimientos!</p>
        <button id="start-game" class="btn btn-primary">Empezar partida</button>
        <div id="game-area" class="hidden">
            <div class="question">
                <h2>Pregunta</h2>
                <p>Aquí se mostrará la pregunta</p>
                <ul class="answers">
                    <li><input type="radio" name="answer" value="1"> Respuesta 1</li>
                    <li><input type="radio" name="answer" value="2"> Respuesta 2</li>
                    <li><input type="radio" name="answer" value="3"> Respuesta 3</li>
                    <li><input type="radio" name="answer" value="4"> Respuesta 4</li>
                </ul>
            </div>
            <div class="score">
                <p>Puntuación: </p>
                <span id="score-value">0</span>
            </div>
        </div>
    </div>
    <script src="script.js"></script>
</body>
</html>

{% endblock %}
