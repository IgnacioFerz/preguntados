{% extends 'btemplate.html.twig' %}

{% block title %}Editar Perfil{% endblock %}

{% block body %}


    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Preguntados - Symfony</title>
    </head>
    <style>
        body {
            height: 100vh;
            background-color: #22a7bd;
            display: flex;
            flex-direction: column;

        }

        .main-content {
            flex: 1;
        }

        footer {
            flex: 0 0 auto;
            align-items: flex-end;
        }
        .card
        {
            width: 40%;
        }



    </style>

    <body>
    <div class="main-content">
        <nav class="navbar navbar-expand-lg navbar-light ">
            <h1 id='title-nav' class="navbar-brand" href="{{ path('app_principal') }}">Preguntados</h1>
            <a id='perfil' class="nav-link" href="{{ path('app_perfil', {'nombre': nombre}) }}">{{ nombre }}</a>
        </nav>

        <div class="container mt-5">
            <div id='card' class="card mx-auto">
                <div class="card-header">
                    <h2>Editar Perfil</h2>
                </div>
                <form action="{{ path('app_perfil_edit') }}" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="{{ nombre }}">
                        </div>
                        <div class="form-group">
                            <label for="email">Correo</label>
                            <input type="email" class="form-control" id="email" name="email" value="{{ mail }}" disabled>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Actualizar Perfil</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3 ">
        <div class="container text-center">
            <span class="text-muted">IgnacioFerz@github &hearts;</span>
        </div>
    </footer>

    </body>
    </html>

{% endblock %}