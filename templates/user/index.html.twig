{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            width: 100%;
            padding: 20px;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .container h1 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .form-control {
            margin-bottom: 10px;
        }
        .mt-4 {
            margin-top: 1.5rem;
        }
    </style>
{% endblock %}
{% block title %}Registro{% endblock %}

{% block body %}
    <div class="container bg-info">
    {{ form_start(registration_form) }}

    <div class="row">
        <div class="col-md-6">
            {{ form_row(registration_form.name, {'type': 'text','attr': {'class': 'form-control mb-3'}}) }}
            {{ form_row(registration_form.password, {'type': 'password', 'attr': {'class': 'form-control mb-3'}}) }}
        </div>
        <div class="col-md-6">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {{ form_row(registration_form.email, {'type': 'email','attr': {'class': 'form-control mb-3'}}) }}
        </div>


        {{ form_end(registration_form) }}
    </div>
{% endblock %}