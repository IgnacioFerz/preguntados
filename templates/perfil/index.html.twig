{% extends 'btemplate.html.twig' %}

{% block title %}Hello PrincipalController!{% endblock %}

{% block body %}

    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Preguntados - Symfony</title>

    </head>
    <style>
        body {
            height: 100vh;
            background-color: #6a93bd; /* Same as second template */
            display: flex;
            flex-direction: column;
        }

        footer {
            flex: 0 0 auto;
            align-items: flex-end;
        }
        .card
        {
            width: 600px;
        }
        .card-header .btn {
            margin-left: auto;
        }

    </style>

    <body>
    <nav class="navbar navbar-expand-lg navbar-light ">
        <a id='title-nav' class="navbar-brand" href="{{ path('app_principal') }}">Preguntados</a>
        <a id='perfil' class="nav-link" href="{{ path('app_perfil', {'nombre': nombre}) }}">{{ nombre }}</a>
    </nav>

    <div id='card' class="container mt-5">
        <div class="container mt-5">
            <div class="card mx-auto">
                <div class="card-header d-flex align-items-center">
                    <img src="https://placehold.co/" alt="Avatar" class="rounded-circle mr-3" style="width: 50px; height: 50px;">
                    <h5 class="card-title">{{ nombre }}</h5>
                    <a id='editar_perfil' href="{{ path('app_perfil_edit') }}" class="btn btn-primary ml-auto">Editar Perfil</a>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Correo : {{mail}}</li>
                    <li class="list-group-item">Puntos : {{ puntos }}: </li>
                    <li class="list-group-item">Partidas totales : </li>
                    <li class="list-group-item">Ganadas: </li>
                    <li class="list-group-item">Perdidas: </li>
                </ul>
            </div>
        </div>

    </div>

    <footer class="footer mt-auto py-3 ">
        <div class="container text-center">
            <span class="text-muted">IgnacioFerz@github &hearts;</span>
        </div>
    </footer>
    </body>

    </html>

{% endblock %}