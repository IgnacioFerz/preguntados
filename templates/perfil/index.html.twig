{% extends 'btemplate.html.twig' %}

{% block title %}Perfil{% endblock %}

{% block body %}

    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Preguntados - Symfony</title>

    </head>
    <style>
        body {
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        footer {
            flex: 0 0 auto;
            align-items: flex-end;
        }
        .card
        {
            width: 600px;
        }
        .card-header .btn {
            margin-left: auto;
        }

    </style>

    <body>
    <nav class="navbar navbar-expand-lg navbar-light ">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_principal') }}">Preguntados</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('app_ranking') }}">Ranking</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_perfil', {'nombre': nombre}) }}">{{ nombre }}</a>
                    </li>
                    <li class="nav-item">
                        <a id='logout' class="nav-link" href="http://127.1.5.20:8000/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div id='card' class="container vh-100 d-flex align-items-center">
        <div class="container mt-5">
            <div class="card m-auto w-50 p-3 shadow-lg">
                <div class="card-header d-flex align-items-center">
                    <img src="https://placehold.co/" alt="Avatar" class="rounded-circle mr-3" style="width: 50px; height: 50px;">
                    <h5 class="card-title">{{ nombre }}</h5>
                    <a id='editar_perfil' href="{{ path('app_perfil_edit') }}" class="btn btn-primary ml-auto">Editar Perfil</a>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Correo : {{mail}}</li>
                    <li class="list-group-item">Puntos : {{ puntos }}: </li>
                    <li class="list-group-item">Partidas totales : </li>
                    <li class="list-group-item">Ganadas: </li>
                    <li class="list-group-item">Perdidas: </li>
                </ul>
            </div>
        </div>

    </div>

    <footer class="footer mt-auto py-3 ">
        <div class="container text-center">
            <span class="text-muted">IgnacioFerz@github &hearts;</span>
        </div>
    </footer>
    </body>

    </html>

{% endblock %}